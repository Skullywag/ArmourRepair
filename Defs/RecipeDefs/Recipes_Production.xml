<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

  <RecipeDef>
    <defName>RepairArmour</defName>
    <label>repair power armour</label>
    <description>Use plasteel to reinforce worn power armour.</description>
    <jobString>Repairing power armour.</jobString>
    <workAmount>3000</workAmount>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <skillRequirements>
      <li>
        <skill>Crafting</skill>
        <minLevel>10</minLevel>
      </li>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>TableMachining</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Apparel_PowerArmor</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <products>
      <Apparel_PowerArmor>1</Apparel_PowerArmor>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Apparel_PowerArmor</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

